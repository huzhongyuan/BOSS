<!--pages/my/addinvoice/index.wxml-->
<view class='Box'>
  <view class='listBox'>
    <view class='title'>抬头类型</view>
    <view class='personal' catchtap='personal' style='{{ personal }}'>个人</view>
    <view class='company' catchtap='company' style='{{ company }}'>单位</view>
  </view>

  <view class='listBox'>
    <view class='title'>名称</view>
    <input placeholder='单位名称（必填）' placeholder-style='font-size:28rpx;font-family:SourceHanSansCN-Regular;font-weight:400;color:rgba(0,0,0,1);opacity:0.5;'></input>
  </view>

    <view class='listBox' style='display:{{iscompany}}'>
    <view class='title'>税号</view>
    <input placeholder='纳税人识别号' placeholder-style='font-size:28rpx;font-family:SourceHanSansCN-Regular;font-weight:400;color:rgba(0,0,0,1);opacity:0.5;'></input>
  </view>

    <view class='listBox' style='display:{{iscompany}}'>
    <view class='title'>单位地址</view>
    <input placeholder='单位地址信息' placeholder-style='font-size:28rpx;font-family:SourceHanSansCN-Regular;font-weight:400;color:rgba(0,0,0,1);opacity:0.5;'></input>
  </view>

    <view class='listBox' style='display:{{iscompany}}'>
    <view class='title'>电话</view>
    <input placeholder='电话号码' placeholder-style='font-size:28rpx;font-family:SourceHanSansCN-Regular;font-weight:400;color:rgba(0,0,0,1);opacity:0.5;'></input>
  </view>

    <view class='listBox' style='display:{{iscompany}}'>
    <view class='title'>开户银行</view>
    <input placeholder='开户银行名称' placeholder-style='font-size:28rpx;font-family:SourceHanSansCN-Regular;font-weight:400;color:rgba(0,0,0,1);opacity:0.5;'></input>
  </view>

      <view class='listBox' style='display:{{iscompany}}'>
    <view class='title'>银行账户</view>
    <input placeholder='银行账户号码' placeholder-style='font-size:28rpx;font-family:SourceHanSansCN-Regular;font-weight:400;color:rgba(0,0,0,1);opacity:0.5;'></input>
  </view>
</view>


<view class='save' catchtap='save'>保存</view>