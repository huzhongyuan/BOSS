<swiper class="swiper" duration="1000" bindchange="swiperChange">
  <block wx:for="{{movies}}" wx:for-index="index"  wx:key="id">
    <swiper-item>
      <image src="{{item.url}}" class="slide-image" mode="aspectFill" />
    </swiper-item>
  </block>
</swiper>

<view class='LoginR' style="opacity: {{ opacity }}">
  <view class='Login' catchtap='login'>登陆</view>
  <view class='line'>/</view>
  <view class='Rejest' catchtap='rejest'>注册</view>
</view>