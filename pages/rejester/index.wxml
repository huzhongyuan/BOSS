<!--pages/rejester/index.wxml-->
<view class='header'>
  <open-data type="userAvatarUrl" class="userAvatarUrl"></open-data>
  <open-data type="userNickName" lang="zh_CN" class="userNickName"></open-data>
</view>
<view class='content'>
  <view class='box'>
    <view class='tips'>
      <image src='/images/icon/star.png'></image>
      <view >姓名</view>
    </view>
    <input  placeholder='未填写' placeholder-style="font-size:28rpx;font-family:SourceHanSansCN-Regular;font-weight:400;color:rgba(0,0,0,1);opacity:0.5;"></input>
  </view>


  <view class='box'>
    <view class='tips'>
      <image src='/images/icon/star.png' style='opacity:0'></image>
      <view>关联手机号</view>
    </view>
    <input disabled="true" value='{{phoneNumber}}'></input>
  </view>


    <view class='box'>
    <view class='tips'>
      <image src='/images/icon/star.png'></image>
      <view>常用手机</view>
    </view>
    <input  placeholder='未填写' placeholder-style="font-size:28rpx;font-family:SourceHanSansCN-Regular;font-weight:400;color:rgba(0,0,0,1);opacity:0.5;"></input>
  </view>


    <view class='box'>
    <view class='tips'>
      <image src='/images/icon/star.png'></image>
      <view>身份证号码</view>
    </view>
    <input placeholder='未填写' placeholder-style="font-size:28rpx;font-family:SourceHanSansCN-Regular;font-weight:400;color:rgba(0,0,0,1);opacity:0.5;" ></input>
  </view>


    <view class='box'>
    <view class='tips'>
      <image src='/images/icon/star.png'></image>
      <view>身份证明</view>
    </view>
    <view class='upload' catchtap='upload'>未上传</view>
  </view>


    <view class='box'>
    <view class='tips'>
      <image src='/images/icon/star.png' style='opacity:0'></image>
      <view>家庭住址</view>
    </view>
    <view class='choisemap' catchtap='choisemap'>{{addr}}</view>
  </view>
</view>

<view class='footer'>
  <button class='next' catchtap='next'>下一步</button>
</view>
